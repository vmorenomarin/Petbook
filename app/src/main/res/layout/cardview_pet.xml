<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:card_view="http://schemas.android.com/apk/res-auto"

android:id="@+id/cvPet"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginBottom="@dimen/activity_vertical_margin"
card_view:cardCornerRadius="@dimen/corner_radius_cardview">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgPetCV"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/pet1"
            />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_below="@id/imgPetCV"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >

        <ImageButton
            android:id="@+id/btnfav"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:background="@drawable/bone"
            />
        <TextView
            android:id="@+id/tvPetName"
            android:paddingLeft="10dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/detail"
            android:textStyle="bold"
            android:text="@string/pname"/>

        <TextView
            android:id="@+id/tvPetAge"
            android:paddingLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="@string/page"
            android:layout_weight="1"/>/>

        <ImageView
            android:id="@+id/fav"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/bone2"
            />

    </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>
